.container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
}
.header{
    height: 80rpx;
    display: flex;
    flex-direction: row;
    padding: 20rpx 0rpx;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    align-items: center;
    background-color: #fff;
    width: 100%;

}
.search-container{
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    width: 88%;
    }
.search-container>.bar{
    background-color: #eee;
    line-height: 70rpx;
    height: 70rpx;
    border-radius: 35rpx;
    padding-left: 60rpx;
    font-size: 28rpx;
    width: 550rpx;
}
.search-container>.icon{
    width: 28rpx;
    height: 28rpx;
    position: relative;
    left: 56rpx;
}
.search-container>.cancel-img{
    width: 28rpx;
    height: 28rpx;
    position: relative;
    right: 38rpx;
    z-index: 99;
}
.header>.cancel{
    text-align: center;
}

.history{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin: 30rpx 30rpx;
    /*width: 100%;*/
}

.history-key{
    display: flex;
    flex-direction: row;
    margin-left: 40rpx;
    flex-wrap: wrap;
}

.hot{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin: 30rpx 30rpx;
}
.title{
    font-size: 28rpx;
    padding-left: 30rpx;
    border-left: 10rpx solid #000;
}
.hot-key{
    display: flex;
    flex-direction: row;
    margin-left: 40rpx;
    flex-wrap: wrap;
}
.keyword{
    background-color: #eee;
    font-size: 24rpx;
    padding: 8rpx;
    margin: 16rpx 16rpx 16rpx 0;
}
.quick-search{
    display: flex;
    flex-direction: column;
}
.book-list{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.book-list>.book-item{
    width: 50%;
}
.no-data{
    position: fixed;
    top: 50%;
    left:50%;
    transform: translateX(-50%);
}
